@model eTicaretData.Entities.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Ürün Detayları</h1>

<div class="container product-detail-container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Image" alt="Ürün Görseli" class="img-fluid product-image" />
        </div>
        <div class="col-md-6 product-details">
            <h2>@Model.Name</h2>
            <p><strong>Fiyat:</strong> <span class="price">@Model.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span></p>
            <p><strong>Stok:</strong> <span class="stock-info">@Model.Stock</span></p>
            <p><strong>Açıklama:</strong> @Model.Description</p>



            <div class="mt-3">
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Geri Dön</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Ürün Detay Sayfası */
    .product-detail-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .product-detail-container h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 40px;
        }

        .product-detail-container .product-image {
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .product-detail-container .product-details {
            padding-left: 20px;
            padding-right: 20px;
            margin-top: 30px;
        }

            .product-detail-container .product-details h2 {
                color: #007bff;
                font-size: 1.8em;
                font-weight: 600;
            }

            .product-detail-container .product-details p {
                font-size: 1.1em;
                margin-bottom: 15px;
                color: #495057;
            }

        .product-detail-container .btn-primary {
            background-color: #28a745;
            border: none;
            padding: 12px 25px;
            font-size: 1.2em;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .product-detail-container .btn-primary:hover {
                background-color: #218838;
                cursor: pointer;
            }

        .product-detail-container .price {
            font-size: 1.3em;
            font-weight: 700;
            color: #e74c3c;
        }

        .product-detail-container .stock-info {
            font-size: 1.1em;
            color: #17a2b8;
        }
</style>
