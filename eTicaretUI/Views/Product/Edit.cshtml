@model eTicaretData.Entities.Product
@{
	Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1 class="text-center">Ürün Düzenle</h1>
<h4 class="text-center">Ürün Bilgilerini Güncelle</h4>
<hr />

<div class="row justify-content-center">
	<div class="col-md-8">
		<form asp-action="Edit" method="post">
			<input type="hidden" asp-for="ProductId" />

			<div class="form-group">
				<label asp-for="Name" class="control-label">Ürün Adı</label>
				<input asp-for="Name" class="form-control" placeholder="Ürün adını girin" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Image" class="control-label">Görsel URL</label>
				<input asp-for="Image" class="form-control" placeholder="Görsel URL'sini girin" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Stock" class="control-label">Stok Miktarı</label>
				<input asp-for="Stock" class="form-control" type="number" placeholder="Stok miktarını girin" />
				<span asp-validation-for="Stock" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CategoryId" class="control-label">Kategori</label>
				<select asp-for="CategoryId" asp-items="@(ViewData["CategoryId"] as SelectList)" class="form-control">
					<option value="">Kategori Seçin</option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>

			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsHome" /> Anasayfada Göster
				</label>
			</div>

			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsApproved" /> Onaylı
				</label>
			</div>

			<div class="form-group text-center">
				<input type="submit" value="Kaydet" class="btn btn-success btn-lg" />
			</div>
		</form>
	</div>
</div>

<div class="text-center mt-3">
	<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>


<style>
	/* Genel Form Stili */
	h1, h4 {
		font-family: 'Arial', sans-serif;
		color: #333;
	}

	hr {
		border-top: 2px solid #4CAF50;
		margin-bottom: 30px;
	}

	/* Form Alanları */
	.form-group {
		margin-bottom: 20px;
	}

	label {
		font-weight: bold;
		color: #555;
	}

	/* Form Kontrolleri */
	.form-control {
		border-radius: 5px;
		border: 1px solid #ddd;
		padding: 10px;
		font-size: 14px;
	}

		.form-control:focus {
			border-color: #4CAF50;
			box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
		}

	/* Validation Hataları */
	.text-danger {
		font-size: 12px;
		color: #d9534f;
	}

	/* Buton Stili */
	.btn {
		padding: 10px 20px;
		font-size: 16px;
		border-radius: 5px;
		transition: all 0.3s ease;
	}

	.btn-success {
		background-color: #28a745;
		border: none;
	}

		.btn-success:hover {
			background-color: #218838;
		}

	.btn-secondary {
		background-color: #6c757d;
		border: none;
	}

		.btn-secondary:hover {
			background-color: #5a6268;
		}

	/* Layout Düzenlemeleri */
	.row {
		margin-bottom: 30px;
	}

	.text-center {
		text-align: center;
	}

	.mt-3 {
		margin-top: 20px;
	}

</style>