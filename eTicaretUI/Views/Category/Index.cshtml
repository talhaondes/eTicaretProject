@model IEnumerable<eTicaretData.Entities.Category>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>
    <p class="text-muted text-center mb-4">
        Bu sayfada kategorileri görüntüleyebilir ve yönetebilirsiniz.
    </p>

    <!-- Yeni Kategori Oluşturma Butonu -->
    <div class="text-center mb-4">
        <a href="@Url.Action("Create", "Category")" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-1"></i> Yeni Kategori Oluştur
        </a>
    </div>

    <!-- Kategori Tablosu -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Kategoriler</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-striped mb-0">
                <thead>
                    <tr>
                        <th style="width: 30%">Kategori Adı</th>
                        <th style="width: 50%">Açıklama</th>
                        <th style="width: 20%">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">
                                Kayıtlı kategori bulunamadı.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.CategoryName</td>
                                <td>@category.Description</td>
                                <td>
                                    <!-- Düzenle Butonu -->
                                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })"
                                       class="btn btn-warning btn-sm me-2">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>

                                    <!-- Silme Butonu -->
                                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })"
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .table th {
        background-color: #007bff;
        color: #fff;
        font-weight: 600;
    }

    .table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .table tr:hover {
        background-color: #e9ecef;
    }

    .btn {
        font-weight: 500;
        padding: 8px 15px;
        border-radius: 8px;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

</style>
