@model eTicaretData.Entities.Category

@{
    ViewData["Title"] = "Kategori Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Yeni Kategori Ekle</h4>
            </div>
            <div class="card-body">
                <!-- Kategori Adı -->
                <div class="form-group mb-3">
                    <label for="CategoryName" class="form-label">Kategori Adı</label>
                    <input type="text" class="form-control" id="CategoryName" name="CategoryName" />
                </div>

                <!-- Açıklama -->
                <div class="form-group mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>
                </div>

                <!-- Butonlar -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        box-shadow: none;
        padding: 12px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    .btn {
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
