@model eTicaretData.Entities.Category

@{
    ViewData["Title"] = "Kategori Silme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Silme İşlemi</h4>
        </div>
        <div class="card-body">
            <h5 class="mb-3">
                <strong>@Model.CategoryName</strong> adlı kategoriyi silmek istediğinizden emin misiniz?
            </h5>
            <p><strong>Açıklama:</strong> @Model.Description</p>

            <!-- Silme Formu -->
            <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.CategoryId">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="fas fa-trash-alt"></i> Sil
                    </button>
                    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-body {
        font-size: 1.1rem;
    }

    .btn {
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 8px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
