@model eTicaretData.Entities.Product
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <!-- Sol kolon (Carousel) - 5/12 oran -->
        <div class="col-md-6">
            <!-- Bootstrap Carousel Başlangıcı -->
            <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.Image" alt="Foto 1" class="d-block product-image" />
                    </div>
                 
                    @if (!string.IsNullOrEmpty(Model.SecondImage))
                    {
                        <div class="carousel-item">
                            <img src="@Model.SecondImage" alt="Foto 2" class="d-block product-image" />
                        </div>

                    }
                </div>
                <!-- Geri (prev) butonu -->
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <!-- İleri (next) butonu -->
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <!-- Sağ kolon (Bilgi) - 7/12 oran -->
        <div class="col-md-6">
            <h1 class="display-4">@Model.Name</h1>
            <div class="my-2">
                <span class="badge bg-warning text-dark me-2">
                    <i class="fa-solid fa-box"></i> Stok: @Model.Stock
                </span>
                <span class="badge bg-secondary">
                    <i class="fa-solid fa-hashtag"></i> 0342216
                </span>
            </div>
            <p class="lead text-muted mt-3">@Model.Description</p>
            <div class="mb-3">
                <span class="badge bg-danger fs-4 fw-bold price-badge">
                    @Model.Price.ToString("c")
                </span>
            </div>
            <div>
                <a asp-action="Buy" asp-controller="Cart" asp-route-id="@Model.ProductId"
                   class="btn btn-success btn-lg">
                    <i class="fa-solid fa-cart-plus"></i>
                    <span class="ms-1">Sepete Ekle</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs my-4" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="desc-tab" data-bs-toggle="tab" data-bs-target="#desc-tab-pane"
                    type="button" role="tab" aria-controls="desc-tab-pane" aria-selected="true">
                Ürün Açıklama
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="payment-tab" data-bs-toggle="tab" data-bs-target="#payment-tab-pane"
                    type="button" role="tab" aria-controls="payment-tab-pane" aria-selected="false">
                Ödeme Yöntemleri  
            </button>
        </li>
      
    </ul>

    <!-- Tab Content -->
    <div class="tab-content p-4 bg-white rounded shadow-sm" id="myTabContent">
        <!-- Description Tab -->
        <div class="tab-pane fade show active" id="desc-tab-pane" role="tabpanel"
             aria-labelledby="desc-tab" tabindex="0">
            <p class="lead">@Model.Description</p>
        </div>

        <!-- Payment Methods Tab -->
        <div class="tab-pane fade" id="payment-tab-pane" role="tabpanel"
             aria-labelledby="payment-tab" tabindex="0">
            <h5 class="mb-3">Ödeme Yöntemleri</h5>
            <p class="lead">
                Siparişlerinizi tamamlamak için birden fazla ödeme yöntemi sunuyoruz. Aşağıda en yaygın yöntemlerin bir özeti yer almaktadır:
            </p>
            <ul>
                <li><strong>Kredi/Banka Kartı:</strong> Visa, MasterCard veya diğer yaygın kartları kullanarak güvenli bir şekilde ödeme yapabilirsiniz. İşlemleriniz SSL şifreleme teknolojisiyle korunmaktadır.</li>
                <li><strong>Banka Havalesi/EFT:</strong> Ödemenizi doğrudan bankamızın hesap numarasına yapabilirsiniz. Bu yöntemde, ödemenin onayı için transferin banka hesabımıza geçmesi beklenir.</li>
                <li><strong>Kapıda Ödeme (Varsa):</strong> Bölgenizde mevcutsa, ürünü teslim alırken nakit veya kartla ödeme yapabilirsiniz. Bu seçenekte ek hizmet ücreti veya kargo bedeli yansıtılabilir.</li>
            </ul>
            <p>
                Ödeme süreciyle ilgili sorularınız veya yardıma ihtiyacınız olması hâlinde lütfen müşteri hizmetlerimizle iletişime geçmekten çekinmeyin.
            </p>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1140px;
        margin: 0 auto;
    }

    /* Carousel içindeki fotoğraflar */
    .product-image {
        max-width: 500px;
        max-height: 500px;
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }


    .price-badge {
        padding: 10px 15px;
    }

    .img-fluid {
        border-radius: 0.5rem;
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
    }

    p.lead.text-muted {
        font-size: 1.1rem;
        color: #555;
    }

    .btn-success {
        background-color: #28a745;
        border-radius: 50px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .nav-tabs .nav-link {
        border-radius: 0.375rem;
        padding: 10px 20px;
        font-size: 1rem;
    }

        .nav-tabs .nav-link.active {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

    .tab-content {
        border-radius: 0.375rem;
    }
</style>
