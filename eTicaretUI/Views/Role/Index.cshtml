@model IEnumerable<eTicaretData.Identity.AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Roles</h1>
<hr />

<!-- Create Role Button -->
<a class="btn btn-success" asp-action="Create">Create Role</a>

<!-- Roles Table -->
<table class="table table-bordered table-striped mt-4">
	<thead>
		<tr>
			<th>Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>
					<a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Düzenle</a>
					<a class="btn btn-danger btn-sm" asp-action="Remove" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i>Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<style>
	/* Sayfa başlıkları ve genel düzen */
	.page-title {
		color: #4CAF50;
		font-size: 2rem;
		margin-bottom: 20px;
		font-weight: bold;
		text-align: center;
	}

	/* Tablo düzeni */
	.table {
		width: 100%;
		border-collapse: collapse;
		margin-top: 20px;
		background-color: #ffffff; /* Beyaz arka plan */
		border: 1px solid #ddd;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

		.table th, .table td {
			padding: 12px 15px;
			text-align: left;
			border-bottom: 1px solid #dee2e6; /* Satır aralarındaki sınır */
		}

		.table th {
			background-color: #4CAF50; /* Yeşil başlık arka planı */
			color: #fff; /* Beyaz başlık metni */
			font-weight: 600; /* Kalın başlık yazısı */
		}

		.table tr:nth-child(even) {
			background-color: #f2f2f2; /* Hafif gri satırlar */
		}

		.table tr:hover {
			background-color: #e9ecef; /* Hoverda satır rengi değişir */
		}

	/* Butonlar */
	.btn {
		padding: 8px 16px;
		font-size: 14px;
		border-radius: 4px;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	/* Create Role Button */
	.btn-success {
		background-color: #28a745;
		border: 1px solid #218838;
		color: white;
		font-weight: 500;
		margin-bottom: 20px;
	}

		.btn-success:hover {
			background-color: #218838;
			border-color: #1e7e34;
		}

	/* Düzenle ve Sil Butonları */
	.btn-warning {
		background-color: #ffc107;
		border: 1px solid #e0a800;
		color: white;
		font-weight: 500;
	}

		.btn-warning:hover {
			background-color: #e0a800;
			border: 1px solid #d39e00;
		}

	.btn-danger {
		background-color: #dc3545;
		border: 1px solid #c82333;
		color: white;
		font-weight: 500;
	}

		.btn-danger:hover {
			background-color: #c82333;
			border: 1px solid #bd2130;
		}

	/* Tabloyu Çevreleyen Kutu */
	.table-wrapper {
		background-color: #fff;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		padding: 20px;
		border-radius: 8px;
		margin: 0 auto;
		max-width: 1200px;
	}

	/* Sayfa ve Buton Düzeni */
	.text-end {
		text-align: right;
	}

	.table-wrapper h1 {
		font-size: 28px;
		color: #333;
		text-align: center;
		margin-bottom: 20px;
	}
</style>
